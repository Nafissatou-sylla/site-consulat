<!DOCTYPE html>

<title>Addresse index</title>

{% block body %}
    <h1>Addresse index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NumeroDeRue</th>
                <th>NomDeRue</th>
                <th>CodePostal</th>
                <th>Ville</th>
                <th>Pays</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for addresse in addresses %}
            <tr>
                <td>{{ addresse.id }}</td>
                <td>{{ addresse.numeroDeRue }}</td>
                <td>{{ addresse.nomDeRue }}</td>
                <td>{{ addresse.codePostal }}</td>
                <td>{{ addresse.ville }}</td>
                <td>{{ addresse.pays }}</td>
                <td>
                    <a href="{{ path('app_addresse_show', {'id': addresse.id}) }}">show</a>
                    <a href="{{ path('app_addresse_edit', {'id': addresse.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_addresse_new') }}">Create new</a>
{% endblock %}
