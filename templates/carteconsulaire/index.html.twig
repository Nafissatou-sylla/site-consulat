{%block body%}
    <div class="container" id="page">
        <div class="container-inner">
            <div class="main">
                <div class="main-inner group">
                    <main class="content" id="content">
                        <div class="page-title hu-pad group">
                            <h1>Carte Consulaire</h1>
                        </div>
                        <div class="hu-pad group">     
                            <article class="group post-33 page type-page status-publish hentry">   
                                <div class="entry themeform">                                        
                                    <p><strong>DOCUMENTS À FOURNIR</strong></p>
                                     <p><h4>Pour le majeur</h4></p>
                                        <ul>
                                            <li>Carte d'Identité Sénégalaise (Copie Recto Verso) OU </li>
                                            <li>Passeport Sénégalais (Copie des deux premières pages)&nbsp;<strong>en cours de validité + Extrait de naissance</strong></li>
