{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }} 
    <div class="container">
                <div class="row">
                    <div class="col-4">
                        {{form_row(form.prenom)}}
                    </div>
                    <div class="col-4">
                        {{form_row(form.nom)}}
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">
                        {{form_row(form.telephone)}}
                    </div>
                </div>

                <div class="row">
                    <div class="col-3">
                        {{form_row(form.dateDeNaissance)}}
                    </div>
                    <div class="col-5">
                        {{form_row(form.lieuDeNaissance)}}
                    </div>
                    <div class="col-4">
                        {{form_row(form.paysDeNaissance)}}
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">
                        {{form_row(form.email)}}
                    </div>
                    <div class="col-6">
                        {{form_row(form.password)}}
                    </div>
                </div>
                 <br>
                <div class="section-header"> <h2>Votre Adresse </h2>
                <div class="row">
                    <div class="col-2">
                        {{form_row(form.adresse.numeroDeRue)}}
                    </div>
                    <div class="col-5">
                        {{form_row(form.adresse.nomDeRue)}}
                    </div>
                    <div class="col-5">
                        {{form_row(form.adresse.codePostal)}}
                    </div>
                    <div class="col-6">
                        {{form_row(form.adresse.ville)}}
                    </div>
                    <div class="col-6">
                        {{form_row(form.adresse.pays)}}
                    </div>
                </div>          
                <br>
                <div class="section-header"> <h2>Votre Formation </h2>
                <div class="row">
                    <div class="col-6">
                        {{form_row(form.formation.universite)}}
                    </div>
                    <div class="col-6">
                        {{form_row(form.formation.formation)}}
                    </div>
                    <div class="col-2">
                        {{form_row(form.formation.annee)}}
                    </div>
                    <div class="col-5">
                        {{form_row(form.formation.niveau)}}
                    </div>
                    <div class="col-5">
                        {{form_row(form.formation.ville)}}
                    </div>
                </div>          

                <div class=col-6>
                    {{form_rest(form)}} 
                </div>
                <button class="btn">{{ button_label|default('Enregistrer') }}</button>

    </div>
    <br>
{{ form_end(form) }}
             